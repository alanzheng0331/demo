<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"> <!-- 适配Tomcat 8.5 -->

    <!-- 字符编码过滤器 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 默认首页 -->
    <welcome-file-list>
        <welcome-file>user/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 验证码Servlet配置（保留，因为你没有给它加注解） -->
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>servlet.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/verifyCodeServlet</url-pattern>
    </servlet-mapping>

    <!-- 用户注册Servlet配置（根据你的实际情况保留/修改） -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>

    <!-- 企业注册Servlet配置（保留，无注解，仅XML配置） -->
    <servlet>
        <servlet-name>CompanyRegisterServlet</servlet-name>
        <servlet-class>servlet.CompanyRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyRegisterServlet</servlet-name>
        <url-pattern>/companyRegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- 【删除】UserLoginServlet和CompanyLoginServlet的XML配置，避免和注解冲突 -->

</web-app>