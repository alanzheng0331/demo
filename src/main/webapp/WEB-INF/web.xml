<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 显示名称 -->
    <display-name>学生兼职系统</display-name>

    <!-- 字符编码过滤器 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 默认首页 -->
    <welcome-file-list>
        <welcome-file>company/companyRegister.jsp</welcome-file>

    </welcome-file-list>
    <servlet>
        <servlet-name>CompanyRegisterServlet</servlet-name>
        <servlet-class>servlet.CompanyRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyRegisterServlet</servlet-name>
        <url-pattern>/company/register</url-pattern>
    </servlet-mapping>

    <!--  我的 SERVLET 用户   -->

    <!--    -->
    <!-- ServletTest 配置 -->
    <servlet>
        <servlet-name>SocketServlet</servlet-name>
        <!-- 对应 ServletTest 类的完整包路径 -->
        <servlet-class>servlet.mypocket.Test.SocketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SocketServlet</servlet-name>
        <!-- 匹配表单提交的 action 路径 -->
        <url-pattern>/SocketServlet</url-pattern>
    </servlet-mapping>

    <!--  Root  -->
        <!-- ServletTest login 配置 -->
        <servlet>
            <servlet-name>RootLoginSocketServlet</servlet-name>
            <!-- 对应 ServletTest 类的完整包路径 -->
            <servlet-class>servlet.mypocket.root.RootLoginSocketServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>RootLoginSocketServlet</servlet-name>
            <!-- 匹配表单提交的 action 路径 -->
            <url-pattern>/RootLoginSocketServlet</url-pattern>
        </servlet-mapping>
        <!-- ServletTest ONLY only SHow 配置 -->
        <servlet>
            <servlet-name>RootOnlyShowSocketServlet</servlet-name>
            <!-- 对应 ServletTest 类的完整包路径 -->
            <servlet-class>servlet.mypocket.root.RootOnlyShowSocketServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>RootOnlyShowSocketServlet</servlet-name>
            <!-- 匹配表单提交的 action 路径 -->
            <url-pattern>/RootOnlyShowSocketServlet</url-pattern>
        </servlet-mapping>
        <!-- ServletTest SHow 配置 -->
        <servlet>
            <servlet-name>RootShowSocketServlet</servlet-name>
            <!-- 对应 ServletTest 类的完整包路径 -->
            <servlet-class>servlet.mypocket.root.RootShowSocketServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>RootShowSocketServlet</servlet-name>
            <!-- 匹配表单提交的 action 路径 -->
            <url-pattern>/RootShowSocketServlet</url-pattern>
        </servlet-mapping>
        <!-- ServletTest DELETE User 配置 -->
        <servlet>
            <servlet-name>RootDeleteUserSocketServlet</servlet-name>
            <!-- 对应 ServletTest 类的完整包路径 -->
            <servlet-class>servlet.mypocket.root.RootDeleteUserSocketServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>RootDeleteUserSocketServlet</servlet-name>
            <!-- 匹配表单提交的 action 路径 -->
            <url-pattern>/RootDeleteUserSocketServlet</url-pattern>
        </servlet-mapping>
        <!-- ServletTest DELETE Company 配置 -->
        <servlet>
            <servlet-name>RootDeleteCompanySocketServlet</servlet-name>
            <!-- 对应 ServletTest 类的完整包路径 -->
            <servlet-class>servlet.mypocket.root.RootDeleteCompanySocketServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>RootDeleteCompanySocketServlet</servlet-name>
            <!-- 匹配表单提交的 action 路径 -->
            <url-pattern>/RootDeleteCompanySocketServlet</url-pattern>
        </servlet-mapping>

    <!--  Root  -->


</web-app>